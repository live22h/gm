<%= link_to @order_preview do %>
<div class="grid-x order-preview">
  <div class="cell small-12">
    <%= image_tag(@order_preview.picture_url) if @order_preview.picture? %>
  </div>
  <div class="cell small-12 small-text"><%= @order_preview.theme.theme %></div>
  <div class="cell small-12"><%= truncate(@order_preview.description, :length => 100) %></div>
  <div class="cell small-6 cost"><%= @order_preview.cost %> руб.</div>
  <div class="cell small-6 deadline"><%= @order_preview.deadline %></div>
</div>
<% end %>
