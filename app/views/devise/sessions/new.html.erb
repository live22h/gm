<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
<div class="form-inputs">

  <div class="grid-x">
    <div class="cell small-12 text-center">
      <h2>Войти на сайт</h2>
    </div>

    <div class="cell small-12">
      <div class="logo"><%= inline_svg "black_logo.svg" %></div>
    </div>
    <div class="cell small-12 medium-6 medium-offset-3"><%= f.input :email, required: false, autofocus: true, input_html: { autocomplete: "email" } %></div>
    <div class="cell small-12 medium-6 medium-offset-3"><%= f.input :password, required: false, input_html: { autocomplete: "current-password" } %></div>
    <div class="cell small-12 medium-offset-3"><%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %></div>
    <div class="cell small-6 medium-3 medium-offset-3">
      <div class="form-actions">
        <%= f.button :submit, t(".sign_in") %>
      </div>
    </div>
    <div class="cell small-6 medium-3">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
<% end %>
