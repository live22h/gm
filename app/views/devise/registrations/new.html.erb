<div class="logo"><%= inline_svg "black_logo.svg" %></div>
<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
<%= f.error_notification %>
<div class="form-inputs">
  <div class="grid-container">

  <div class="grid-x grid-margin-x">
    <div class="cell small-12 medium-8 medium-offset-2"><h2>Регистрация на сайте</h2></div>
    <div class="cell small-12 medium-8 medium-offset-2">
      <%= f.input :email, required: true, label: 'E-mail', autofocus: true, input_html: { autocomplete: "email" } %>
      <%= f.input :fam, label: 'Фамилия', autofocus: true %>
      <%= f.input :name, label: 'Имя', autofocus: true %>
      <%= f.input :phone, label: 'Телефон', required: true, autofocus: true, input_html: { autocomplete: "phone" } %>
    </div>
    <div class="cell small-12 medium-4 medium-offset-2">
      <%= f.input :password, required: true, hint: (t('devise.shared.minimum_password_length', count: @minimum_password_length) if @minimum_password_length), input_html: { autocomplete: "new-password" } %>
    </div>
    <div class="cell small-12 medium-4">
      <%= f.input :password_confirmation, required: true, input_html: { autocomplete: "new-password" } %>
    </div>
    <div class="cell small-12 medium-4 medium-offset-2"><%= f.input :description, label: 'Расскажите о себе', input_html: { rows: 7 } %></div>
    <div class="cell small-12 medium-4"><div class="preview-box"><img id = 'preview' alt = 'Нет фотографии профиля' src="<%= @user.avatar if @user.avatar?%>") %></div><%= f.file_field :avatar, input_html: {class: 'show-for-sr' }  %></div>
    <div class="cell small-12 medium-8 medium-offset-2">
      <div class="form-actions">
        <%= f.button :submit, t(".sign_up") %>
      </div>
    </div>
</div>
</div>
</div>

<% end %>

<%= render "devise/shared/links" %>
<script type="text/javascript">
  $("#user_phone").mask("8(000)000-00-00", {clearIfNotMatch: true});
function readURL(input) {
  if (input.files && input.files[0]) {
    var reader = new FileReader();
    reader.onload = function (e) {
      $('#preview').attr('src', e.target.result);
    }
    reader.readAsDataURL(input.files[0]);
  }
}
$("#user_avatar").change(function(){
  readURL(this);
});
</script>
